extends layout

block content
  .w3-card4
    header.w3-container.w3-pink(style='display: flex; justify-content: space-between; align-items: center;')
      h1 Lista da entidade: #{lista[0].NIPC_entidade_comunicante}  (#{lista[0].entidade_comunicante}) Sum: #{sum}
      a.w3-button.w3-round.w3-grey(href="/", style='margin-left: auto;') Back

    .w3-container 
      table.w3-table-all 
        tr 
          th ID contrato  
          th Objeto Contrato 
          th Data Celebracao Contrato 
          th Preco Contratual
          th NIPC Entidade Comunicante 
          th Entidade Comunicante
        each contrato in lista 
          tr 
            td
              a(href=`/${contrato._id}`)= contrato._id
            td= contrato.objectoContrato
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual
            td= contrato.NIPC_entidade_comunicante
            td= contrato.entidade_comunicante

    footer.w3-container.w3-pink 
      address Gerado por EngWeb2024 em #{data}
